{
    "name": "Platkey",
    "description": "Atajos de teclado, guarda clases, guarda aportes, buscador aumentado.",
    "version": "3.1",
    "manifest_version": 3,
    "author": {
        
    },
    "background": {
        "service_worker": "/src/background.js"
    },
    "content_scripts": [
        {
            "js": [
                "save-items.js",
                "spotlight.js",
                "content.js"
            ],
            "matches": [
                "https://platzi.com/*"
            ],
            "css": [
                "page.css"
            ]
        }
    ],
    "action": {
        "default_popup": "/src/popup.html",
        "default_icon": {
            "16": "/images/icon16.png",
            "32": "/images/icon32.png",
            "48": "/images/icon48.png",
            "128": "/images/icon128.png"
        }
    },
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://platzi.com/*"
    ]
}